                    "$ref": "#/definitions/Work"
                  }
                },
                "roles": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Role"
                  }
                },
                "workParts": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/WorkPart"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Update a creator",
        "parameters": [
          {
            "name": "creator",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Creator"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Creator not found"
          },
          "200": {
            "description": "The updated creator object",
            "schema": {
              "type": "object",
              "required": [
