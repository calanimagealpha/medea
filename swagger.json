          "200": {
            "description": "An empty object",
            "schema": {
              "type": "object",
              "properties": {}
            }
          }
        }
      }
    },
    "/works": {
      "post": {
        "description": "Create a new work object",
        "parameters": [
          {
            "name": "work",
